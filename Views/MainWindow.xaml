<Window x:Class="PsConsoleLauncher.views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console Menu" Height="450" Width="800"
        Background="Black"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- This is how you potentially can use the attributes -->
        <!--
            See https://learn.microsoft.com/en-us/dotnet/api/system.windows.controls.contentcontrol.contenttemplate
            to create a DataTemplate for each item in the list and bind it to the properties of your data model.
        -->
        <StackPanel x:Name='TileItemsControl' Grid.Row="0" Margin="20,10" VerticalAlignment="Center">
                <TextBlock x:Name="DetailTitle" Foreground="White" FontSize="24" FontWeight="Bold" Text="Title" HorizontalAlignment="Center"/>
                <TextBlock x:Name="DetailPlatform" Foreground="Gray" FontSize="16" Text="Platform" HorizontalAlignment="Center"/>
                <TextBlock x:Name="DetailPath" Foreground="Gray" FontSize="12" Text="Path" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Disabled"
                  Background="Black">
            <StackPanel Orientation="Horizontal" Margin="20">

                <!-- Example App Block -->
                <Button Width="150" Height="200" Margin="10"
                    Background="DarkSlateBlue" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 1"/>

                <Button Width="150" Height="200" Margin="10"
                    Background="DarkGreen" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 2"/>

                <Button Width="150" Height="200" Margin="10"
                    Background="DarkRed" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 3"/>

                <Button Width="150" Height="200" Margin="10"
                    Background="DarkOrange" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 4"/>

                <Button Width="150" Height="200" Margin="10"
                    Background="DarkCyan" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 5"/>
            </StackPanel>
    </ScrollViewer>
    </Grid>
</Window>
