<Window x:Class="ConsoleMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console Menu" Height="450" Width="800"
        Background="Black"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Disabled"
                  Background="Black">
        <StackPanel Orientation="Horizontal" Margin="20">

            <!-- Example App Block -->
            <Button Width="150" Height="200" Margin="10"
                    Background="DarkSlateBlue" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 1"/>

            <Button Width="150" Height="200" Margin="10"
                    Background="DarkGreen" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 2"/>

            <Button Width="150" Height="200" Margin="10"
                    Background="DarkRed" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 3"/>

            <Button Width="150" Height="200" Margin="10"
                    Background="DarkOrange" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 4"/>

            <Button Width="150" Height="200" Margin="10"
                    Background="DarkCyan" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Content="App 5"/>

        </StackPanel>
    </ScrollViewer>
</Window>
